    "app": "link:./src/app",
    "concurrently": "^6.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fastify": "^3.15.1",
    "graphql": "^15.5.0",
    "knex": "^0.95.4",
    "mercurius": "^7.6.0",
    "mercurius-codegen": "^1.5.0",
    "pg": "^8.6.0",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
